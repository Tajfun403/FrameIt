<Page x:Class="FrameIt.Frames.ManageFramesPhotoShows.AddPhotoShows"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:baseui="clr-namespace:FrameIt.UI"
      mc:Ignorable="d"
        d:DesignHeight="530"
        d:DesignWidth="1000"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Label Content="Add photo shows"
               Style="{StaticResource HeaderStyle}"
               Margin="20"/>

        <Button
            Content="Save"
            Width="160"
            HorizontalAlignment="Right"
            Margin="20"
            Click="SaveClick"/>

        <!-- SHOW LIST -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Shows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <baseui:PhotoControl
                                DisplayName="{Binding DisplayName}"
                                Image="{Binding ImageBitmap}"
                                ShouldShowName="True"
                                IsSelectable="False"
                                IsHitTestVisible="False"/>

                            <CheckBox Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Margin="100,0,0,0"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      IsEnabled="{Binding IsSelectable}"
                                      Content="Add to frame"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    
    </Grid>
</Page>
