<Page x:Class="FrameIt.Frames.AddFrame.AddFrameName"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FrameIt.General"
      xmlns:baseui="clr-namespace:FrameIt.UI"
      mc:Ignorable="d"
      d:DesignHeight="530"
      d:DesignWidth="1000"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="AddFrameName">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <local:NavigationHeader Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid Width="500"
                  Height="300"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">

                <Border
                    Background="#1d1c1c"
                    CornerRadius="12"
                    Padding="24"
                    BorderBrush="White"
                    BorderThickness="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- title -->
                            <RowDefinition Height="Auto"/>
                            <!-- description -->
                            <RowDefinition Height="Auto"/>
                            <!-- input -->
                            <RowDefinition Height="Auto"/>
                            <!-- buttons -->
                        </Grid.RowDefinitions>

                        <!-- TITLE -->
                        <TextBlock
                            Grid.Row="0"
                            Text="Enter frame name"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,10,0,12"/>

                        <!-- DESCRIPTION -->
                        <TextBlock
                            Grid.Row="1"
                            Text="Give your frame a name so you can easily recognize it later."
                            FontSize="15"
                            TextWrapping="Wrap"
                            Foreground="White"
                            Margin="0,20,0,50"/>

                        <!-- INPUT -->
                        <Border
                            Grid.Row="2"
                            Height="44"
                            CornerRadius="22"
                            Background="#6B6B6B"
                            Margin="0,15,0,20">

                            <TextBox
                                Text="Enter frame name"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="14"
                                VerticalContentAlignment="Center"
                                Padding="16,0"/>
                        </Border>

                        <!-- BUTTONS -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- CANCEL -->
                            <Button
                                Grid.Column="0"
                                Content="Cancel"
                                Margin="5,0,12,0"
                                Style="{StaticResource CancelButton}"/>

                            <!-- ACCEPT -->
                            <Button
                                Grid.Column="2"
                                Content="Accept"
                                Style="{StaticResource OutlineWhiteButton}"/>
                        </Grid>

                    </Grid>
                </Border>

            </Grid>
        </Grid>

    </Grid>
</Page>
