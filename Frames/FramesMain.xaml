<Page x:Class="FrameIt.Frames.FramesMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FrameIt.Frames"
      xmlns:baseui="clr-namespace:FrameIt.UI"
      mc:Ignorable="d"
      d:DesignHeight="530"
      d:DesignWidth="1000"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="FramesMain">

	<Grid>
		<!-- LAYOUT -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>

		<!-- HEADER -->
		<Grid Height="100" Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="500"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Label Content="Connected Frames"
                   Style="{StaticResource HeaderStyle}"
                   Grid.Column="0"
                   Margin="20 0 0 0"/>

			<StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 0 20 0">
				<Button Content="Add Frame"
                        Width="150"
                        Margin="0 0 20 0"
                        Click="AddFrameClick"/>
				<Button Content="Delete Frame"
                        Width="150"/>
			</StackPanel>
		</Grid>

		<!-- FRAME LIST -->
        <ItemsControl Grid.Row="1"
              ItemsSource="{Binding Frames}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <Grid Margin="10"
              HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <!-- lewa kolumna: zdjęcie + nazwa -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- prawa kolumna: przyciski -->
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ZDJĘCIE + NAZWA -->
                        <baseui:PhotoControl
                            Grid.Column="0"
                            DisplayName="{Binding Config.Name}"
                            Image="{Binding ImageBitmap}"
                            ShouldShowName="True"
                            SecondaryName="{Binding Config.IsFrameOn,Converter={StaticResource OnlineStatusTextConverter}}"
                            ShouldDisplaySecondaryName="True"
                            Margin="0,0,24,0"/>

                        <!-- PRZYCISKI -->
                        <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">

                            <Button Content="Manage frame photo shows"
                        Width="220"
                        Margin="0,0,12,0"
                        Style="{StaticResource OutlineWhiteButton}"/>

                            <Button Content="Upload photo"
                                
                        Width="150"
                        Margin="0,0,12,0"
                        Style="{StaticResource OutlineWhiteButton}"/>

                            <Button Content="Manage frame"
                                    
                        Width="150"
                        Style="{StaticResource OutlineWhiteButton}"
                        Click="ManageFrameClick"/>

                        </StackPanel>

                    </Grid>

                </DataTemplate>
            </ItemsControl.ItemTemplate>


        </ItemsControl>


    </Grid>
</Page>
