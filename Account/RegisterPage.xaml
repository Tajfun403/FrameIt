<Page x:Class="FrameIt.Account.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:FrameIt.Account"
      Title="RegisterPage"
      Background="{DynamicResource MaterialDesignPaper}">

    <Page.Resources>
        <Style x:Key="IndigoButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#3F51B5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="materialDesign:RippleAssist.IsDisabled" Value="True"/>
            <Setter Property="materialDesign:RippleAssist.Feedback" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5C6BC0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3949AB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter Property="Foreground" Value="Silver"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IndigoFlatButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Foreground" Value="#3F51B5"/>
            <Setter Property="Background" Value="#4D3F51B5"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="materialDesign:RippleAssist.IsDisabled" Value="True"/>
            <Setter Property="materialDesign:RippleAssist.Feedback" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Background" Value="#663F51B5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RegisterInputStyle" TargetType="Control">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#3F51B5"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="materialDesign:HintAssist.Foreground" Value="#3F51B5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Width="300">
            <TextBlock Text="Registration" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Foreground="White"
                       FontSize="40"
                       Margin="0,0,0,30" 
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="RegName" 
                     materialDesign:HintAssist.Hint="Username" 
                     FontSize="16"
                     Foreground="White"
                     Margin="0,10" 
                     CaretBrush="#3F51B5"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                <TextBox.Resources>
                    <Style TargetType="TextBox" BasedOn="{StaticResource RegisterInputStyle}"/>
                </TextBox.Resources>
            </TextBox>

            <TextBox x:Name="RegEmail" 
                     materialDesign:HintAssist.Hint="Email Address" 
                     FontSize="16"
                     Foreground="White"
                     Margin="0,10" 
                     CaretBrush="#3F51B5"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                <TextBox.Resources>
                    <Style TargetType="TextBox" BasedOn="{StaticResource RegisterInputStyle}"/>
                </TextBox.Resources>
            </TextBox>

            <PasswordBox x:Name="RegPass" 
                         materialDesign:HintAssist.Hint="Password" 
                         FontSize="16"
                         Foreground="White"
                         Margin="0,10"
                         Height="45"
                         CaretBrush="#3F51B5"
                         VerticalAlignment="Bottom"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                <PasswordBox.Resources>
                    <Style TargetType="PasswordBox" BasedOn="{StaticResource RegisterInputStyle}"/>
                </PasswordBox.Resources>
            </PasswordBox>

            <PasswordBox x:Name="RegPassConfirm" 
                         materialDesign:HintAssist.Hint="Confirm Password" 
                         FontSize="16"
                         Foreground="White"
                         Margin="0,10"
                         Height="45"
                         CaretBrush="#3F51B5"
                         VerticalAlignment="Bottom"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                <PasswordBox.Resources>
                    <Style TargetType="PasswordBox" BasedOn="{StaticResource RegisterInputStyle}"/>
                </PasswordBox.Resources>
            </PasswordBox>

            <Button x:Name="RegisterButton" 
                    Content="REGISTER" 
                    Click="Register_Click" 
                    Margin="0,30,0,10" 
                    Height="45"
                    Style="{StaticResource IndigoButtonStyle}"/>

            <Button Content="Back to Login" 
                    Click="Back_Click" 
                    FontSize="16"
                    Style="{StaticResource IndigoFlatButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>