<Page x:Class="FrameIt.Account.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="RegisterPage"
      Background="{DynamicResource MaterialDesignPaper}">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Width="300">
            <TextBlock Text="Registration" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Foreground="White"
                       Margin="0,0,0,30" 
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="RegName" 
                     materialDesign:HintAssist.Hint="Username" 
                     Foreground="White"
                     Margin="0,10" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

            <TextBox x:Name="RegEmail" 
                     materialDesign:HintAssist.Hint="Email Address" 
                     Foreground="White"
                     Margin="0,10" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

            <PasswordBox x:Name="RegPass" 
                         materialDesign:HintAssist.Hint="Password" 
                         Foreground="White"
                         Margin="0,10" 
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>

            <PasswordBox x:Name="RegPassConfirm" 
                         materialDesign:HintAssist.Hint="Confirm Password" 
                         Foreground="White"
                         Margin="0,10" 
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>

            <Button Content="REGISTER" 
                    Click="Register_Click" 
                    Margin="0,30,0,10" 
                    Height="45"/>

            <Button Content="Back to Login" 
                    Click="Back_Click" 
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>
    </Grid>
</Page>