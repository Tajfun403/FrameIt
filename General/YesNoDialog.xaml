<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FrameIt.General"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="FrameIt.General.YesNoDialog"
             mc:Ignorable="d" d:DesignWidth="500"
    Height="230" Width="500"
    >
    <Grid>

        <Border
            Background="#1d1c1c"
            CornerRadius="12"
            Padding="24"
            BorderBrush="white"
            BorderThickness="1">

            <StackPanel>

                <Label
                    Grid.Row="0"
                    Content="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Title'}"
                    FontSize="22"
                    Padding="0"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Margin="0,10,0,12"/>

                <TextBlock
                    Text="{Binding MainText, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Desc'}"
                    FontSize="15"
                    TextWrapping="Wrap"
                    Foreground="White"
                    Margin="0,20,0,30"/>


                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button
                        Name="NoButton"
                        Grid.Column="0"
                        Content="No"
                        Margin="5,0,12,0"
                        Style="{StaticResource OutlineWhiteButton}"
                        Click="NoButton_Click"
                        
                        />
                    <Button
                        Name="YesButton"
                        Grid.Column="2"
                        Content="Yes"
                        Style="{StaticResource RedBackgroundButton}"
                        Click="YesButton_Click"
                        Visibility="{Binding IsYesNegative, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                        />
                    <Button
                        Name="YesButton2"
                        Grid.Column="2"
                        Content="Yes"
                        Style="{StaticResource RedBackgroundButton}"
                        Background="DarkGreen"
                        Click="YesButton_Click"
                        Visibility="{Binding IsYesNegative, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}}"
                        />
                </Grid>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>
