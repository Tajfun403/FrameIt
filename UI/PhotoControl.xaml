<UserControl x:Class="FrameIt.UI.PhotoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:FrameIt.UI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             Height="100" Width="{Binding DesiredWidth, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource Self}}"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
             materialDesign:RippleAssist.IsDisabled="False"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border CornerRadius="20,20,20,20" Margin="10 10 10 10">
                <Border.Background>
                    <ImageBrush Stretch="Fill" ImageSource="{Binding Image, 
                        UpdateSourceTrigger=PropertyChanged, 
                        RelativeSource={RelativeSource AncestorType=UserControl},
                        FallbackValue='Images/Liara.jpg'}"/>
                </Border.Background>
            </Border>
            <Border Background="#333" CornerRadius="1 1 1 1" Margin="7 8 8 8"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Width="13"
                Height="13"
                    />
            <CheckBox 
           IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=False, RelativeSource={RelativeSource AncestorType=UserControl}}" 
           VerticalAlignment="Top"
           HorizontalAlignment="Right"
           Foreground="White"
           Visibility="{Binding IsSelectable, 
                UpdateSourceTrigger=PropertyChanged, 
                RelativeSource={RelativeSource AncestorType=UserControl},
                Converter={StaticResource BoolToVis},
                FallbackValue=Visible}"
           Checked="CheckBox_Checked"
           Unchecked="CheckBox_Checked"
        />
            <!--            Visibility="{Binding SelectionVisibility, 
                UpdateSourceTrigger=PropertyChanged, 
                RelativeSource={RelativeSource AncestorType=UserControl}}"
            -->
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel 
               VerticalAlignment="Center"
               Margin="10 0 10 0"
             >
                <Label
                   Content="{Binding DisplayName, 
                UpdateSourceTrigger=PropertyChanged,
                RelativeSource={RelativeSource AncestorType=UserControl},
                FallbackValue='PhotoShow'}" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontSize="14"
                   FontWeight="Bold"
                />
                <Label
                   Content="{Binding SecondaryName, 
                UpdateSourceTrigger=PropertyChanged,
                RelativeSource={RelativeSource AncestorType=UserControl},
                FallbackValue='PhotoShow'}" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontSize="8"
                   FontWeight="Normal"
                   Margin="0 0 0 0"
                   Visibility="{Binding ShouldDisplaySecondaryName, 
                    UpdateSourceTrigger=PropertyChanged, 
                    FallbackValue=Collapsed, 
                    RelativeSource={RelativeSource AncestorType=UserControl},
                    Converter={StaticResource BoolToVis}}"
                />
            </StackPanel>
        </Grid>
        <materialDesign:Ripple
            x:Name="RippleEffect"
              materialDesign:RippleAssist.IsCentered="False"
              materialDesign:RippleAssist.Feedback="#80ffffff"
            materialDesign:RippleAssist.ClipToBounds="False"
            materialDesign:RippleAssist.RippleSizeMultiplier=".2"
            Visibility="{Binding IsNotSelectable, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"
            IsHitTestVisible="False"
            />
        <!-- TODO enabling hit detection here disabled clicking on the checkbox, but disabling it disables the ripple entirely -->
    </Grid>
</UserControl>
