<Page x:Class="FrameIt.Shows.ShowsMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrameIt.Shows" xmlns:baseui="clr-namespace:FrameIt.UI"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="1000"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="ShowsMain">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Manage PhotoShows" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Left" Grid.Column="0" Margin="20 0 0 0"/>
            <Button Content="Add PhotoShow" Grid.Column="1" Margin="20 0 20 0"/>
            <Button Content="Delete PhotoShows" Grid.Column="2" Margin="20 0 20 0"/>
        </Grid>
        <ItemsControl Grid.Row="1" Name="ShowsList" ItemsSource="{Binding PhotosList, Mode=Default, UpdateSourceTrigger=PropertyChanged}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Margin="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <baseui:PhotoControl ShouldShowName="True" DisplayName="{Binding DisplayName}" Image="{Binding ImageBitmap}" IsSelectable="True"/>
                    <!-- <Label Content="{Binding DisplayName}"/> -->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
