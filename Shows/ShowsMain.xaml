<Page x:Class="FrameIt.Shows.ShowsMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrameIt.Shows" xmlns:baseui="clr-namespace:FrameIt.UI"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="1000"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="ShowsMain">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Manage PhotoShows"
                   Style="{StaticResource HeaderStyle}"
                   HorizontalAlignment="Left" 
                   Grid.Column="0" 
                   Margin="20 0 0 0"/>
            <TabControl Name="ControlsTab" Grid.Column="1" Margin="0 10 10 10" SelectedIndex="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="BaseControls" TabIndex="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width=".5*"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="AddButton" Content="Add PhotoShow" Grid.Column="0" Margin="20 0 20 0"/>
                        <Button Name="DeleteButton" Content="Delete PhotoShows" Click="DeletePhotos_Click" Grid.Column="1" Margin="20 0 20 0"/>
                    </Grid>
                </TabItem>
                <TabItem Header="DeleteControls" TabIndex="1">
                    <Grid Background="#222">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Label></Label>
                        <Button Name="ReallyDeleteButton" 
                                Content="Delete selected shows"
                                Click="DeletePhotos_Click" 
                                Grid.Column="1" 
                                Grid.RowSpan="2"
                                VerticalAlignment="Center"
                                Margin="20 0 20 0"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <ItemsControl Grid.Row="1" Name="ShowsList" ItemsSource="{Binding PhotosList, Mode=Default, UpdateSourceTrigger=PropertyChanged}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Margin="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <baseui:PhotoControl ShouldShowName="True" DisplayName="{Binding DisplayName}" Image="{Binding ImageBitmap}" IsSelectable="True"/>
                    <!-- <Label Content="{Binding DisplayName}"/> -->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
