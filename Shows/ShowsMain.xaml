<Page x:Class="FrameIt.Shows.ShowsMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrameIt.Shows" xmlns:baseui="clr-namespace:FrameIt.UI"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="1000"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="ShowsMain"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Height="100" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Manage PhotoShows"
                   Style="{StaticResource HeaderStyle}"
                   HorizontalAlignment="Left" 
                   Grid.Column="0" 
                   Margin="20 0 0 0"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="AddButton" Content="Add PhotoShow" Grid.Column="0" Margin="00 0 20 0" Width="150" Click="AddButton_Click"/>
                <Button Name="DeleteButton" 
                        Content="{Binding DelPhotosButtonText, RelativeSource={RelativeSource AncestorType=Page}, FallbackValue='Delete Button'}" 
                        Click="DeletePhotos_Click" 
                        Grid.Column="1" 
                        Margin="0 0 20 0"
                        Width="150"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="DeleteUI" Height="60" Margin="20" Background="#222" Grid.Row="1"
              Visibility="{Binding IsInDeleteMode, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource BaseLabelStyle}" VerticalAlignment="Center" Grid.Column="0" Margin="20 0 20 0">
                Select items that you wish to remove. This action will be irreversible.
            </Label>
            <Button Name="ReallyDeleteButton" 
                    Content="Delete selected shows"
                    Command="{Binding CommandDeletePhotos, RelativeSource={RelativeSource AncestorType=Page}}"
                    Grid.Column="1" 
                    Grid.RowSpan="2"
                    VerticalAlignment="Center"
                    Margin="20 0 20 0"
                    />
        </Grid>
        <ItemsControl Grid.Row="2" 
                      Name="ShowsList" 
                      ItemsSource="{Binding ShowsCollection, Mode=Default, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=Page}}" 
                      Height="Auto">
            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Margin="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <baseui:PhotoControl ShouldShowName="True" DisplayName="{Binding DisplayName}"
                                         Image="{Binding ImageBitmap}"
                                         IsSelectable="{Binding ItemsSelectable, 
                                            RelativeSource={RelativeSource AncestorType=Page},
                                            UpdateSourceTrigger=PropertyChanged}"
                                         ClickCommand="{Binding ShowClickedCommand, 
                                            RelativeSource={RelativeSource AncestorType=Page}}"
                                         SelectionChanged="{Binding SelectionChangedCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                         IsSelected="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         />
                    <!-- <Label Content="{Binding DisplayName}"/> -->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
