<Page x:Class="FrameIt.Shows.ShowImageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrameIt.Shows" xmlns:baseui="clr-namespace:FrameIt.UI"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="1000"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="EditImage"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>
        <Label Content="Edit image" Grid.Row="0"
                   Style="{StaticResource HeaderStyle}"
                   HorizontalAlignment="Center"
                   Margin="10"/>
        <Grid x:Name="MiddleGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="CurrentImage"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="{Binding ImageContext.ImageBitmap, RelativeSource={RelativeSource AncestorType=Page}}"
                   />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            <StackPanel x:Name="ImageControls" Grid.Row="0" Margin="10">
                <Label Content="Image Controls"
                   Style="{StaticResource SemiHeaderStyle}"
                       HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 10 0 10">
                        <Button Style="{StaticResource DeleteButton}"
                        HorizontalAlignment="Center"
                    Content="Delete image"
                        Name="DeleteButton"
                        Width="150"
                        Height="30"
                        Margin="10"
                                Click="DeleteButton_Click"
                        />
                        <Button
                        Name="RotateButton"
                        Width="150"
                        Height="30"
                        Margin="10"
                        Click="RotateButton_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="RotateRight" VerticalAlignment="Center" Margin="0 0 8 0"/>
                                <TextBlock Text="Rotate" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <Label
                   Style="{StaticResource BaseLabelStyle}"
                       HorizontalAlignment="Center">
                    Add image description:
                </Label>
                <TextBox x:Name="ImageDescriptionTextBox"
                         Width="250"
                         Height="100"
                         Margin="10"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Text="{Binding Description, Mode=TwoWay}"
                         />

            </StackPanel>

                <Label VerticalAlignment="Bottom" Grid.Row="1"
                   Style="{StaticResource BaseLabelStyle}"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center">
                    All changes saved automatically.
                </Label>
            </Grid>

        </Grid>
        <Grid x:Name="EffectsGrid" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center"
                Margin="10,0,0,0">
                <Label 
                Style="{StaticResource SemiHeaderStyle}"
                Margin="10"
                Content="Apply effects"
                />
                <TextBlock Text="All filters can be reversed at any time."
                           Margin="10 0 0 0"
                         FontSize="12"
                         Foreground="#AAAAAA"
                           VerticalAlignment="Center"
                           
                           />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0" VerticalAlignment="Center"
                Margin="0,0,20,0">
                <materialDesign:PackIcon Kind="ContentSaveCheck"
                 Width="16"
                 Height="16"
                 Foreground="#AAAAAA"
                 Margin="0,0,6,0"/>
                <TextBlock Text="All changes are saved automatically"
                         FontSize="12"
                         Foreground="#AAAAAA"/>
            </StackPanel>
            
            
            <ItemsControl Grid.Row="1" 
              Name="PhotosListControl" 
              ItemsSource="{Binding FiltersList, Mode=Default, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=Page}}" 
              Height="Auto">
                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <ScrollViewer VerticalScrollBarVisibility="Disabled"
                  HorizontalScrollBarVisibility="Auto"
                                  x:Name="ItemsScrollViewer"
                                  >
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Margin="10" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <baseui:PhotoControl
                                 Image="{Binding PreviewImage, IsAsync=False}"
                                 IsSelectable="False"
                            ClickCommand="{Binding ChangeFilterCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                 />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Page>
