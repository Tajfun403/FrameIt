<Page x:Class="FrameIt.Shows.EditShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrameIt.Shows" xmlns:baseui="clr-namespace:FrameIt.UI"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="1000"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="ShowsMain"
      AllowDrop="True"
      DragEnter="Page_DragEnter"
      DragLeave="Page_DragLeave"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      SizeChanged="Page_SizeChanged"
      >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Height="100" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <TextBox 
                Grid.Column="2"
                Width="500" 
                Height="80" 
                   Name="NameTextBox"
                Margin="20 0 0 0" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                FontSize="40"
                FontWeight="Bold"
                TextAlignment="Center"
                Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue='Show Name'}"
                Visibility="{Binding IsRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}" >
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding FinishRenameCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                    </TextBox.InputBindings>
            </TextBox>
            <Label Content="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue='Show Name'}"
                   Style="{StaticResource HeaderStyle}"
                   Name="NameLabel"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="2" 
                   Margin="20 0 0 0"
                   Visibility="{Binding IsNotRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"
                   MouseLeftButtonDown="Label_MouseLeftButtonDown"
                   />
            <StackPanel Grid.Column="3" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Name="RenameButton" Content="Rename" Margin="2" Width="150"  
                    Visibility="{Binding IsNotRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"
                        Click="RenameButton_Click"
                        />
                <Button Name="FinishRenaming" Content="Finish renaming" Margin="2" Width="150"
                   Visibility="{Binding IsRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"
                        Click="FinishRenaming_Click"
                        />
                <Button Name="DeleteButton" Content="Delete" Margin="2" Width="150"/>
            </StackPanel>
        </Grid>

        <ItemsControl Grid.Row="2" 
              Name="ShowsList" 
              ItemsSource="{Binding PhotosList, Mode=Default, UpdateSourceTrigger=PropertyChanged}" 
              Height="Auto">
            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                                  x:Name="ItemsScrollViewer"
                                  >
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Margin="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <baseui:PhotoControl ShouldShowName="False" DisplayName="{Binding DisplayName}"
                                 Image="{Binding Thumbnail, IsAsync=True}"
                                 IsSelectable="False"
                                 Margin="{Binding ItemsMargin, RelativeSource={RelativeSource AncestorType=Page}}"
                                 />
                    <!-- <Label Content="{Binding DisplayName}"/> -->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Name="DropOverlay" Grid.Row="2"
              Background="#80000000"
              DragEnter="DropOverlay_DragEnter"
              DragOver="DropOverlay_DragOver"
              Drop="DropOverlay_Drop"
              AllowDrop="True"
              Visibility="{Binding IsUserDragging, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"
              >

            <Label Content="Drop files here to add to the show"
                   Style="{StaticResource HeaderStyle}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#ffffffff"
                   />
        </Grid>


        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="{Binding PhotosCountString, RelativeSource={RelativeSource AncestorType=Page}, FallbackValue='0 photos'}"
                   Style="{StaticResource BaseLabelStyle}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Margin="20"/>
            <Label Content="Drag-and-drop to add"
                   Style="{StaticResource BaseLabelStyle}"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center"
                   Grid.Column="2"
                        
                        >
                <Button Name="BrowseButton" Content="Browse photos to add..." Width="200" Height="40" 
                        Click="BrowseButton_Click"
                    Margin="20"
                    />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
