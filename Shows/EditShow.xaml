<Page x:Class="FrameIt.Shows.EditShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrameIt.Shows" 
      xmlns:baseui="clr-namespace:FrameIt.UI"
      xmlns:md="http://materialdesigninxaml.com/winfx" xmlns:md1="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="530" d:DesignWidth="1000"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      Title="ShowsMain"
      AllowDrop="True"
      DragEnter="Page_DragEnter"
      DragLeave="Page_DragLeave"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      SizeChanged="Page_SizeChanged"
      >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Height="100" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <TextBox 
                Grid.Column="2"
                Width="500" 
                Height="80" 
                   Name="NameTextBox"
                Margin="20 0 0 0" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                FontSize="40"
                FontWeight="Bold"
                TextAlignment="Center"
                Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue='Show Name'}"
                Visibility="{Binding IsRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}" >
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding FinishRenameCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                    </TextBox.InputBindings>
            </TextBox>
            <Label Content="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, FallbackValue='Show Name'}"
                   Style="{StaticResource HeaderStyle}"
                   Name="NameLabel"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="2" 
                   Margin="20 0 0 0"
                   Visibility="{Binding IsNotRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"
                   MouseLeftButtonDown="Label_MouseLeftButtonDown"
                   />
            <Button 
                Grid.Column="3"
                Name="RenameIconButton" 
                    Margin="8" 
                    Padding="8"
                    Width="60"
                    Height="60"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTip="Rename"
                    Visibility="{Binding IsNotRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"
                    Click="RenameButton_Click">
                <md1:PackIcon Kind="Pencil" Width="24" Height="24"/>
            </Button>
            <Button 
                Grid.Column="3"
                Name="FinishRenamingIcon" 
                    Margin="8" 
                    Padding="8"
                    Width="60"
                    Height="60"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTip="Rename"
                    Visibility="{Binding IsRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"
                    Click="FinishRenaming_Click">
                <md1:PackIcon Kind="Check" Width="24" Height="24"/>
            </Button>

            <StackPanel Grid.Column="4" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Name="RenameButton" Margin="2" Width="150"  
                    Visibility="Collapsed"
                        Click="RenameButton_Click"
                        
                        
                        >
                    <!--  Visibility="{Binding IsNotRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"-->
                     
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <md1:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0 0 8 0"/>
                        <TextBlock Text="Rename" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Name="FinishRenaming" Content="Finish renaming" Margin="2" Width="150"
                   Visibility="Collapsed"
                    Click="FinishRenaming_Click"
                        />
                <!--  Visibility="{Binding IsRenaming, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"-->
                <Button Name="DeleteButton" 
                        Content="{Binding DelPhotosButtonText, RelativeSource={RelativeSource AncestorType=Page}, FallbackValue='Delete Button'}" 
                        Click="DeletePhotos_Click" 
                        Grid.Column="1" 
                        Margin="5"
                        Width="150"/>
                <Button Name="DeleteShow" 
                        Style="{StaticResource DeleteButton}"
                        Content="Delete show" 
                        Grid.Column="1" 
                        Margin="5"
                        Width="150"
                        Click="DeleteShow_Click"
                        
                        />
            </StackPanel>
        </Grid>

        <Grid x:Name="DeleteUI" Height="60" Margin="20" Background="#222" Grid.Row="1"
      Visibility="{Binding IsInDeleteMode, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource BaseLabelStyle}" VerticalAlignment="Center" Grid.Column="0" Margin="20 0 20 0">
                Select items that you wish to remove. This action will be irreversible.
            </Label>
            <Button Name="ReallyDeleteButton" 
                Style="{StaticResource DeleteButton}"
            Content="Delete selected photos"
            Command="{Binding CommandDeletePhotos, RelativeSource={RelativeSource AncestorType=Page}}"
            Grid.Column="1" 
            Grid.RowSpan="2"
            VerticalAlignment="Center"
            Margin="20 0 20 0"

            />
        </Grid>

        <ItemsControl Grid.Row="2" 
              Name="PhotosListControl" 
              ItemsSource="{Binding PhotosList, Mode=Default, UpdateSourceTrigger=PropertyChanged}" 
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
    ScrollViewer.IsDeferredScrollingEnabled="True"
              Height="Auto">
            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                                  x:Name="ItemsScrollViewer"
                                  >
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Margin="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <baseui:PhotoControl ShouldShowName="False" DisplayName="{Binding DisplayName}"
                                 Image="{Binding Thumbnail, IsAsync=True}"
                                 Margin="{Binding ItemsMargin, RelativeSource={RelativeSource AncestorType=Page}}"
                                 ClickCommand="{Binding PhotoClickedCommand, 
                                    RelativeSource={RelativeSource AncestorType=Page}}"
                                 
                                 IsSelectable="{Binding ItemsSelectable, 
                                    RelativeSource={RelativeSource AncestorType=Page},
                                    UpdateSourceTrigger=PropertyChanged}"
                                 SelectionChanged="{Binding SelectionChangedCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                 IsSelected="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         
                                 />
                    <!-- <Label Content="{Binding DisplayName}"/> -->
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Name="DropOverlay" Grid.Row="2"
              Background="#80000000"
              DragEnter="DropOverlay_DragEnter"
              DragOver="DropOverlay_DragOver"
              Drop="DropOverlay_Drop"
              AllowDrop="True"
              Visibility="{Binding IsUserDragging, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVis}}"
              >

            <Label Content="Drop files here to add to the show"
                   Style="{StaticResource HeaderStyle}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#ffffffff"
                   />
        </Grid>


        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="{Binding PhotosCountString, RelativeSource={RelativeSource AncestorType=Page}, FallbackValue='0 photos'}"
                   Style="{StaticResource BaseLabelStyle}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Margin="20"/>
            <Label Content="Drag-and-drop to add"
                   Style="{StaticResource BaseLabelStyle}"
                   Grid.Column="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center"
                   Grid.Column="2"
                        
                        >
                <Button Name="BrowseButton" Content="Browse photos to add..." Width="200" Height="40" 
                        Click="BrowseButton_Click"
                    Margin="20"
                    />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
